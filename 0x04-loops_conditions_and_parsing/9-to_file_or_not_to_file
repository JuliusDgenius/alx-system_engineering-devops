#!/usr/bin/env bash
# A bash script that gives information about a file: school

current_dir=( * )
found=false

for dir in "${current_dir[@]}"; do
    if [ "$dir" == "school" ]; then
        found=true
        break
    else
        found=false
    fi
done

if [ "$found" == true ]; then
    if [ -d "school" ] && [ ! -f "school" ]; then
        echo "school file exists"
        echo "school file is not empty"
    elif [ -s "school" ] && [ -f "school" ]; then
        echo "school file exist"
        echo "school file is not empty"
        echo "school is a regular file"
    else
        echo "school file exists"
        echo "school file is empty"
        echo "school file is a regular file"
       
    fi
else
    echo "school file does not exist"
fi
